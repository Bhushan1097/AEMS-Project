<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Current Data</title>
    <link rel="stylesheet" href="/css/data_style.css">
</head>
<body>
    <% layout("/layouts/boilerplate.ejs") %>
    <div class="container mt-4">
        <h1 class="text-center mb-4">Current Data</h1>
        
        <!-- User Information -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                User Information
            </div>
            <div class="card-body">
                <% if (user) { %>
                    <p><strong>Name:</strong> <%= user.name %></p>
                    <p><strong>Mobile No:</strong> <%= user.mobile_no %></p>
                <% } else { %>
                    <p class="text-danger">No user information available.</p>
                <% } %>
            </div>
        </div>
        
        
<!-- Latest Consumption Data -->
<div class="card">
    <div class="card-header bg-success text-white">
        Latest Consumption Data
    </div>
    <div class="card-body">
        <% if (consumption) { %>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Parameter</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><strong>Timestamp</strong></td>
                        <td><%= consumption.time_stamp ? new Date(consumption.time_stamp).toLocaleString() : '-' %></td>
                    </tr>
                    <tr>
                        <td><strong>Consumption (kWh)</strong></td>
                        <td><%= consumption.consumption || '-' %></td>
                    </tr>
                    <tr>
                        <td><strong>Relay Status</strong></td>
                        <td><%= consumption.relay_status || '-' %></td>
                    </tr>
                    <tr>
                        <td><strong>Voltage (V)</strong></td>
                        <td><%= consumption.voltage || '-' %></td>
                    </tr>
                    <tr>
                        <td><strong>Current (A)</strong></td>
                        <td><%= consumption.current || '-' %></td>
                    </tr>
                    <tr>
                        <td><strong>Power (W)</strong></td>
                        <td><%= consumption.power || '-' %></td>
                    </tr>
                    <tr>
                        <td><strong>Balance</strong></td>
                        <td><%= consumption.balance || '-' %></td>
                    </tr>
                    <tr>
                        <td><strong>Power Factor</strong></td>
                        <td><%= consumption.power_factor || '-' %></td>
                    </tr>
                    <tr>
                        <td><strong>Frequency (Hz)</strong></td>
                        <td><%= consumption.frequency || '-' %></td>
                    </tr>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-danger">No consumption data available.</p>
        <% } %>
    </div>
</div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
